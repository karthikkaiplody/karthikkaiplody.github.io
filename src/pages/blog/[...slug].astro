---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
	<article class="prose prose-slate dark:prose-invert lg:prose-lg mx-auto">
		<div class="mb-8 text-center">
			<h1 class="mb-2 text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">{post.data.title}</h1>
			<div class="text-slate-500 dark:text-slate-400">
				<time datetime={post.data.pubDate.toISOString()}>
					{post.data.pubDate.toLocaleDateString('en-us', {
						year: 'numeric',
						month: 'long',
						day: 'numeric',
					})}
				</time>
			</div>
		</div>
		{post.data.heroImage && <img width={1020} height={510} src={post.data.heroImage} alt="" class="rounded-lg shadow-md mb-8" />}
		<Content />
	</article>
</Layout>
