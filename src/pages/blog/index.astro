---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog - Karthik Kaiplody">
	<section class="space-y-8">
		<h1 class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white">Blog</h1>
		<div class="grid gap-8">
			{posts.map((post) => (
				<a href={`/blog/${post.slug}/`} class="block group">
					<article class="space-y-2 border-b border-slate-200 dark:border-slate-800 pb-8">
						<h2 class="text-2xl font-bold text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
							{post.data.title}
						</h2>
						<p class="text-sm text-slate-500 dark:text-slate-400">
							<time datetime={post.data.pubDate.toISOString()}>
								{post.data.pubDate.toLocaleDateString('en-us', {
									year: 'numeric',
									month: 'short',
									day: 'numeric',
								})}
							</time>
						</p>
						<p class="text-slate-600 dark:text-slate-300">
							{post.data.description}
						</p>
					</article>
				</a>
			))}
		</div>
	</section>
</Layout>
